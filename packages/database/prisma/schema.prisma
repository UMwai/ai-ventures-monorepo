// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// SHARED MODELS (Used across all apps)
// ============================================

model User {
  id            String    @id @default(cuid())
  clerkId       String    @unique
  email         String    @unique
  name          String?
  avatarUrl     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  subscriptions Subscription[]
  altTextImages AltTextImage[]
  projects      Project[]
  apiKeys       ApiKey[]
  usageRecords  UsageRecord[]
  dcfModels     DCFModel[]
  watchlist     Watchlist[]

  @@map("users")
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  stripeCustomerId     String   @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  status               SubscriptionStatus @default(INACTIVE)
  plan                 PlanType @default(FREE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String
  key         String   @unique
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model UsageRecord {
  id        String   @id @default(cuid())
  userId    String
  app       AppType
  action    String
  count     Int      @default(1)
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, app, createdAt])
  @@map("usage_records")
}

// ============================================
// ALTTEXTIFY MODELS
// ============================================

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  website     String?
  settings    Json?    @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  images AltTextImage[]

  @@map("projects")
}

model AltTextImage {
  id           String      @id @default(cuid())
  userId       String
  projectId    String?
  imageUrl     String
  imageName    String?
  fileSize     Int?
  mimeType     String?
  altTextShort String?
  altTextMedium String?
  altTextLong  String?
  qualityScore Int?
  wcagCompliant Boolean    @default(false)
  context      String?
  tone         String?     @default("neutral")
  industry     String?
  metadata     Json?
  status       ProcessingStatus @default(PENDING)
  errorMessage String?
  processingTime Int?      // milliseconds
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([projectId])
  @@map("alt_text_images")
}

// ============================================
// ENUMS
// ============================================

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

enum PlanType {
  FREE
  STARTER
  PRO
  BUSINESS
  ENTERPRISE
}

enum AppType {
  ALTTEXTIFY
  BILLINGPULSE
  DATACLEANER
  DCF_BUILDER
}

enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ============================================
// DCF BUILDER MODELS
// ============================================

model DCFModel {
  id              String   @id @default(cuid())
  userId          String
  ticker          String
  companyName     String
  sector          String?
  industry        String?

  // Snapshot of data at time of creation
  currentPrice    Float
  marketCap       Float
  beta            Float
  sharesOutstanding Float

  // Assumptions (stored as JSON for flexibility)
  assumptions     Json     // DCFAssumptions
  waccInputs      Json     // WACCInputs
  terminalInputs  Json     // TerminalValueInputs

  // Calculated results
  intrinsicValue  Float?
  impliedUpside   Float?
  wacc            Float?
  enterpriseValue Float?
  equityValue     Float?

  // Full result cache
  resultCache     Json?    // Full DCFResult
  sensitivityCache Json?   // SensitivityTable

  // AI-generated content
  aiReasoning     Json?
  risks           String[]
  catalysts       String[]
  investmentThesis String?

  // Scenario
  scenario        DCFScenario @default(BASE)

  // Sharing
  isPublic        Boolean  @default(false)
  shareCode       String?  @unique
  shareConfig     Json?    // ShareConfig
  viewCount       Int      @default(0)

  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([ticker])
  @@index([shareCode])
  @@map("dcf_models")
}

model FinancialDataCache {
  id          String   @id @default(cuid())
  ticker      String   @unique
  data        Json     // Full CompanyData
  fetchedAt   DateTime @default(now())
  expiresAt   DateTime

  @@index([ticker])
  @@index([expiresAt])
  @@map("financial_data_cache")
}

model Watchlist {
  id          String   @id @default(cuid())
  userId      String
  ticker      String
  companyName String
  addedAt     DateTime @default(now())
  notes       String?
  targetPrice Float?
  alertEnabled Boolean @default(false)

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
  @@map("watchlists")
}

enum DCFScenario {
  BULL
  BASE
  BEAR
}
