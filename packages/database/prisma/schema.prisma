// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// SHARED MODELS (Used across all apps)
// ============================================

model User {
  id            String    @id @default(cuid())
  clerkId       String    @unique
  email         String    @unique
  name          String?
  avatarUrl     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  subscriptions Subscription[]
  altTextImages AltTextImage[]
  projects      Project[]
  apiKeys       ApiKey[]
  usageRecords  UsageRecord[]

  @@map("users")
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  stripeCustomerId     String   @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  status               SubscriptionStatus @default(INACTIVE)
  plan                 PlanType @default(FREE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String
  key         String   @unique
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model UsageRecord {
  id        String   @id @default(cuid())
  userId    String
  app       AppType
  action    String
  count     Int      @default(1)
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, app, createdAt])
  @@map("usage_records")
}

// ============================================
// ALTTEXTIFY MODELS
// ============================================

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  website     String?
  settings    Json?    @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  images AltTextImage[]

  @@map("projects")
}

model AltTextImage {
  id           String      @id @default(cuid())
  userId       String
  projectId    String?
  imageUrl     String
  imageName    String?
  fileSize     Int?
  mimeType     String?
  altTextShort String?
  altTextMedium String?
  altTextLong  String?
  qualityScore Int?
  wcagCompliant Boolean    @default(false)
  context      String?
  tone         String?     @default("neutral")
  industry     String?
  metadata     Json?
  status       ProcessingStatus @default(PENDING)
  errorMessage String?
  processingTime Int?      // milliseconds
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([projectId])
  @@map("alt_text_images")
}

// ============================================
// ENUMS
// ============================================

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

enum PlanType {
  FREE
  STARTER
  PRO
  BUSINESS
  ENTERPRISE
}

enum AppType {
  ALTTEXTIFY
  BILLINGPULSE
  DATACLEANER
}

enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
