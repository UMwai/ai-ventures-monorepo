{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@ai-ventures/ui": ["packages/ui/src"],
      "@ai-ventures/ai-sdk": ["packages/ai-sdk/src"],
      "@ai-ventures/auth": ["packages/auth/src"],
      "@ai-ventures/database": ["packages/database/src"],
      "@ai-ventures/shared-types": ["packages/shared-types/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", ".next", "out"]
}
