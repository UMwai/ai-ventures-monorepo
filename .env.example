# =================================
# AI Ventures Monorepo - Environment Variables
# =================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Database (PostgreSQL - Supabase/Neon/Railway)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =================================
# AI Provider API Keys (Multi-Model Support)
# =================================

# OpenAI (GPT-5, GPT-5 Vision, O3)
OPENAI_API_KEY=sk-xxxxx

# Anthropic (Claude 4.5 Opus, Claude 4.5 Sonnet, Claude 3.5 Haiku)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Google AI (Gemini 3 Pro, Gemini 3 Ultra, Gemini 3 Flash)
GOOGLE_AI_API_KEY=AIza_xxxxx
# Or use GEMINI_API_KEY if preferred
GEMINI_API_KEY=AIza_xxxxx

# =================================
# Payment Processing
# =================================

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# =================================
# Storage
# =================================

# Vercel Blob (for image storage)
BLOB_READ_WRITE_TOKEN=vercel_blob_xxxxx

# =================================
# Optional: Analytics & Monitoring
# =================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Sentry Error Tracking
SENTRY_DSN=

# =================================
# Optional: AI Orchestration Settings
# =================================

# Default primary AI provider (openai, anthropic, google)
AI_PRIMARY_PROVIDER=openai

# Enable multi-model validation (true/false)
AI_MULTI_MODEL_VALIDATION=true

# Max orchestration iterations
AI_MAX_ORCHESTRATION_ITERATIONS=3
